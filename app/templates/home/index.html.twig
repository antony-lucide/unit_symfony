{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">Bienvenue sur notre application</h1>
            <p class="lead mb-4">Une solution professionnelle pour gérer vos besoins</p>
            {% if not app.user %}
                <div class="mt-5">
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">Se connecter</a>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h3 class="card-title">Sécurité</h3>
                    <p class="card-text">Une authentification robuste pour protéger vos données</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h3 class="card-title">Performance</h3>
                    <p class="card-text">Une application optimisée pour une expérience fluide</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h3 class="card-title">Simplicité</h3>
                    <p class="card-text">Une interface intuitive pour une utilisation facile</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 